<div class="bg-white dark:bg-gray-800 overflow-hidden shadow rounded-lg">
  <div class="p-5">
    <div class="flex items-center">
      <div class="flex-shrink-0">
        <%= render('_icon', locals: { name: icon, css_class: "h-6 w-6 text-#{color}-600 dark:text-#{color}-400" }) %>
      </div>
      <div class="ml-5 w-0 flex-1">
        <dl>
          <dt class="text-sm font-medium text-gray-500 dark:text-gray-400 truncate"><%= label %></dt>
          <dd class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= value %></dd>
        </dl>
      </div>
    </div>
  </div>
</div>

