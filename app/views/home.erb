<% if @current_user %>
  <div class="px-4 py-6 sm:px-0">
    <div class="mb-6">
      <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-100">Welcome back, <%= @current_user.email %>!</h1>
      <p class="text-gray-600 dark:text-gray-400 mt-2">Here's your personalized dashboard</p>
    </div>

    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3 mb-8">
      <%= render('_stat_card', locals: {
        color: 'indigo',
        icon: 'user',
        label: 'Account Status',
        value: 'Active'
      }) %>
      
      <%= render('_stat_card', locals: {
        color: 'green',
        icon: 'check_circle',
        label: 'Account Created',
        value: @current_user.created_at.strftime('%b %d, %Y')
      }) %>
      
      <%= render('_stat_card', locals: {
        color: 'blue',
        icon: 'lock',
        label: 'Security',
        value: 'Protected'
      }) %>
    </div>


    <div class="bg-white dark:bg-gray-800 shadow overflow-hidden sm:rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <h3 class="text-lg leading-6 font-medium text-gray-900 dark:text-gray-100 mb-4">Account Management</h3>
        <div class="space-y-3">
          <%= render('_info_row', locals: {
            title: 'Email Address',
            subtitle: @current_user.email,
            border_class: 'border-b border-gray-200 dark:border-gray-700'
          }) %>

          <%= render('_info_row', locals: {
            title: 'Authentication Method',
            subtitle: 'Cookie Session (24-hour expiration)',
            border_class: 'border-b border-gray-200 dark:border-gray-700'
          }) %>

          <%= render('_info_row', locals: {
            title: 'Sign Out',
            subtitle: 'End your current session',
            border_class: '',
            action_html: '<a href="/auth/logout" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">Logout</a>'.html_safe
          }) %>
        </div>
      </div>
    </div>
  </div>
<% else %>
  <div class="px-4 py-6 sm:px-0">
    <div class="text-center">
      <h1 class="text-4xl font-bold text-gray-900 dark:text-gray-100 mb-4">Welcome to Tails ðŸ¦Š</h1>
      <p class="text-xl text-gray-600 dark:text-gray-400 mb-8">A minimal web framework for Ruby developers who value simplicity over magic.</p>
      
      <div class="bg-white dark:bg-gray-800 shadow overflow-hidden sm:rounded-lg max-w-2xl mx-auto">
        <div class="px-4 py-5 sm:p-6">
          <h2 class="text-2xl font-semibold text-gray-900 dark:text-gray-100 mb-4">Tech Stack</h2>
          <ul class="space-y-3 text-left">
            <%= render('_feature_item', locals: { label: 'Falcon', description: 'Server' }) %>
            <%= render('_feature_item', locals: { label: 'Roda', description: 'Routing' }) %>
            <%= render('_feature_item', locals: { label: 'SQLite3 + ActiveRecord', description: 'Database' }) %>
            <%= render('_feature_item', locals: { label: 'BCrypt + Sessions', description: 'Auth' }) %>
            <%= render('_feature_item', locals: { label: 'ERB + Tailwind', description: 'UI' }) %>
          </ul>

          <div class="mt-8">
            <a href="/auth/register" class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-indigo-600 dark:bg-indigo-500 hover:bg-indigo-700 dark:hover:bg-indigo-600">
              Get Started
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

