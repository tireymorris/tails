            </a>
          <% else %>
            <a href="/auth/login" class="link-primary text-sm">
              Login
            </a>
            <a href="/auth/register" class="btn-primary">
              Register
            </a>
          <% end %>
        </div>
      </div>
    </div>
  </nav>

  <main class="max-w-7xl mx-auto px-4 py-6 sm:px-6 lg:px-8">
    <%= render 'components/flash' %>
    <%= yield %>
  </main>
