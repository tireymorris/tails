<!DOCTYPE html>
<html lang="en" class="h-full">

<%= render 'layouts/head' %>

<body class="bg-gray-50 dark:bg-gray-900 min-h-screen h-full">
  <nav class="nav-container">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between h-16">
        <div class="flex">
          <div class="flex-shrink-0 flex items-center">
            <a href="/" class="text-xl font-bold text-brand">Tails ðŸ¦Š</a>
          </div>
          <div class="hidden sm:ml-6 sm:flex sm:space-x-8">
            <% if @current_user %>
              <a href="/" class="<%= request.path == '/' ? 'link-nav-active' : 'link-nav' %>">
                Dashboard
              </a>
            <% end %>
            <a href="/styles" class="<%= request.path == '/styles' ? 'link-nav-active' : 'link-nav' %>">
              Guide
            </a>
          </div>
        </div>
        <div class="hidden sm:ml-6 sm:flex sm:items-center space-x-4">
          <% if @current_user %>
            <span class="text-secondary text-sm"><%= @current_user.email %></span>
            <a href="/auth/logout" class="btn-primary">
              Logout
            </a>
          <% else %>
            <a href="/auth/login" class="link-nav">
              Login
            </a>
            <a href="/auth/register" class="btn-primary">
              Register
            </a>
          <% end %>
        </div>
      </div>
    </div>
  </nav>

  <main class="max-w-7xl mx-auto px-4 py-6 sm:px-6 lg:px-8">
    <%= render 'components/flash' %>
    <%= yield %>
  </main>
</body>
</html>

