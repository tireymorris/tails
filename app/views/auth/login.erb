<div class="min-h-[calc(100vh-10rem)] flex items-center justify-center -mx-4 sm:-mx-6 lg:-mx-8 -my-6">
  <div class="max-w-md w-full space-y-8 px-4">
    <div>
      <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900 dark:text-gray-100">
        Sign in to your account
      </h2>
    </div>

    <form class="mt-8 space-y-6" action="/auth/login" method="POST">
      <%= csrf_tag('/auth/login') %>
      <div class="rounded-md shadow-sm -space-y-px">
        <div>
          <label for="email" class="sr-only">Email address</label>
          <%= render 'components/input', locals: { id: 'email', name: 'email', type: 'email', required: true, position: 'top', placeholder: 'Email address' } %>
        </div>
        <div>
          <label for="password" class="sr-only">Password</label>
          <%= render 'components/input', locals: { id: 'password', name: 'password', type: 'password', required: true, position: 'bottom', placeholder: 'Password' } %>
        </div>
      </div>

      <div>
        <%= render 'components/button', locals: { text: 'Sign in', type: 'submit', variant: 'primary', size: 'full' } %>
      </div>

      <div class="text-center">
        <%= render 'components/link', locals: { href: '/auth/register', text: "Don't have an account? Register here", variant: 'primary' } %>
      </div>
    </form>
  </div>
</div>

