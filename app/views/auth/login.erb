<div class="centered-container">
  <div class="form-wrapper">
    <div>
      <h2 class="page-heading">
        Sign in to your account
      </h2>
    </div>

    <form class="mt-8 space-y-6" action="/auth/login" method="POST">
      <%= csrf_tag('/auth/login') %>
      <div class="rounded-md shadow-sm -space-y-px">
        <div>
          <label for="email" class="sr-only">Email address</label>
          <input id="email" name="email" type="email" required class="input-top" placeholder="Email address">
        </div>
        <div>
          <label for="password" class="sr-only">Password</label>
          <input id="password" name="password" type="password" required class="input-bottom" placeholder="Password">
        </div>
      </div>

      <div>
        <button type="submit" class="btn-primary-full">
          Sign in
        </button>
      </div>

      <div class="text-center">
        <a href="/auth/register" class="link-primary">
          Don't have an account? Register here
        </a>
      </div>
    </form>
  </div>
</div>

