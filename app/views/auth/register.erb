<div class="auth-container">
  <div class="auth-form-wrapper">
    <div>
      <h2 class="auth-heading">
        Create your account
      </h2>
    </div>

    <form class="mt-8 space-y-6" action="/auth/register" method="POST">
      <%= csrf_tag %>
      <div class="rounded-md shadow-sm -space-y-px">
        <div>
          <label for="email" class="sr-only">Email address</label>
          <input id="email" name="email" type="email" required class="input-top" placeholder="Email address">
        </div>
        <div>
          <label for="password" class="sr-only">Password</label>
          <input id="password" name="password" type="password" required class="input-middle" placeholder="Password (min 6 characters)">
        </div>
        <div>
          <label for="password_confirmation" class="sr-only">Confirm Password</label>
          <input id="password_confirmation" name="password_confirmation" type="password" required class="input-bottom" placeholder="Confirm password">
        </div>
      </div>

      <div>
        <button type="submit" class="btn-primary-full">
          Register
        </button>
      </div>

      <div class="text-center">
        <a href="/auth/login" class="link-primary">
          Already have an account? Sign in here
        </a>
      </div>
    </form>
  </div>
</div>

