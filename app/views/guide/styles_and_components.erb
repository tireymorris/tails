<!-- Styles Section -->
<section id="styles" data-tab-content="styles" class="mb-16 hidden">
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 max-w-6xl mx-auto">
    
    <!-- Typography Examples -->
    <div class="card">
      <div class="card-padding">
        <h3 class="heading-md mb-6">Typography</h3>
        <div class="space-y-4">
          <div>
            <h1 class="heading-xl">Heading XL</h1>
            <code class="text-xs text-muted">.heading-xl</code>
          </div>
          <div>
            <h2 class="heading-lg">Heading Large</h2>
            <code class="text-xs text-muted">.heading-lg</code>
          </div>
          <div>
            <h3 class="heading-md">Heading Medium</h3>
            <code class="text-xs text-muted">.heading-md</code>
          </div>
          <div>
            <h4 class="heading-sm">Heading Small</h4>
            <code class="text-xs text-muted">.heading-sm</code>
          </div>
          <div>
            <p class="subtitle">This is a subtitle</p>
            <code class="text-xs text-muted">.subtitle</code>
          </div>
          <div class="flex gap-4 text-sm">
            <span class="text-primary">Primary</span>
            <span class="text-secondary">Secondary</span>
            <span class="text-muted">Muted</span>
            <span class="text-brand">Brand</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Button Examples -->
    <div class="card">
      <div class="card-padding">
        <h3 class="heading-md mb-6">Buttons</h3>
        <div class="space-y-4">
          <div>
            <button class="btn-primary">Primary Button</button>
            <div><code class="text-xs text-muted">.btn-primary</code></div>
          </div>
          <div>
            <button class="btn-primary-lg">Large Primary Button</button>
            <div><code class="text-xs text-muted">.btn-primary-lg</code></div>
          </div>
          <div>
            <button class="btn-primary-full">Full Width Button</button>
            <div><code class="text-xs text-muted">.btn-primary-full</code></div>
          </div>
        </div>
      </div>
    </div>

    <!-- Link Examples -->
    <div class="card">
      <div class="card-padding">
        <h3 class="heading-md mb-6">Links</h3>
        <div class="space-y-4">
          <div>
            <a href="#" class="link-primary">Primary Link</a>
            <div><code class="text-xs text-muted">.link-primary</code></div>
          </div>
          <div>
            <a href="#" class="link-nav">Navigation Link</a>
            <div><code class="text-xs text-muted">.link-nav</code></div>
          </div>
          <div>
            <a href="#" class="link-nav-active">Active Nav Link</a>
            <div><code class="text-xs text-muted">.link-nav-active</code></div>
          </div>
        </div>
      </div>
    </div>

    <!-- Form Examples -->
    <div class="card">
      <div class="card-padding">
        <h3 class="heading-md mb-6">Form Inputs</h3>
        <div class="space-y-4">
          <div>
            <input type="text" placeholder="Top input" class="input-top">
            <div><code class="text-xs text-muted">.input-top</code></div>
          </div>
          <div>
            <input type="text" placeholder="Middle input" class="input-middle">
            <div><code class="text-xs text-muted">.input-middle</code></div>
          </div>
          <div>
            <input type="text" placeholder="Bottom input" class="input-bottom">
            <div><code class="text-xs text-muted">.input-bottom</code></div>
          </div>
          <div>
            <input type="text" placeholder="Base input" class="input-base rounded-md">
            <div><code class="text-xs text-muted">.input-base</code></div>
          </div>
        </div>
      </div>
    </div>

    <!-- Card Examples -->
    <div class="card">
      <div class="card-padding">
        <h3 class="heading-md mb-6">Cards</h3>
        <div class="space-y-4">
          <div class="card-sm">
            <div class="card-padding">
              <p class="text-sm">Small Card (.card-sm)</p>
            </div>
          </div>
          <div class="card">
            <div class="card-padding">
              <p class="text-sm">Regular Card (.card)</p>
            </div>
          </div>
          <div><code class="text-xs text-muted">.card, .card-sm, .card-padding</code></div>
        </div>
      </div>
    </div>

    <!-- Alert Examples -->
    <div class="card">
      <div class="card-padding">
        <h3 class="heading-md mb-6">Alerts</h3>
        <div class="space-y-4">
          <div class="alert-success">
            Success alert message
          </div>
          <div class="alert-error">
            Error alert message
          </div>
          <div><code class="text-xs text-muted">.alert-success, .alert-error</code></div>
        </div>
      </div>
    </div>

  </div>

  <!-- Layout Examples -->
  <div class="mt-12">
    <div class="card max-w-6xl mx-auto">
      <div class="card-padding">
        <h3 class="heading-md mb-8">Layout Components</h3>
        
        <div class="space-y-8">
          <!-- Page Heading Demo -->
          <div>
            <h4 class="heading-sm mb-3">Page Heading (.page-heading)</h4>
            <p class="text-muted text-sm mb-4">Large centered headings for sections</p>
            <div class="bg-gray-100 dark:bg-gray-600 p-6 rounded-lg">
              <h2 class="page-heading">This is a Page Heading</h2>
            </div>
          </div>

          <!-- Form Wrapper Demo -->
          <div>
            <h4 class="heading-sm mb-3">Form Wrapper (.form-wrapper)</h4>
            <p class="text-muted text-sm mb-4">Constrained width content area with spacing (max-width, padding, vertical spacing)</p>
            <div class="bg-gray-100 dark:bg-gray-600 p-6 rounded-lg">
              <div class="form-wrapper mx-auto">
                <div class="card-sm">
                  <div class="card-padding">
                    <p class="text-sm text-center">Content is constrained to a readable width with proper spacing</p>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Centered Container Demo -->
          <div>
            <h4 class="heading-sm mb-3">Centered Container (.centered-container)</h4>
            <p class="text-muted text-sm mb-4">Full-height centered layout for forms and modals (flex center, full viewport height)</p>
            <div class="bg-gray-100 dark:bg-gray-600 p-6 rounded-lg">
              <div class="flex items-center justify-center h-48 bg-gray-200 dark:bg-gray-500 rounded border-2 border-dashed border-gray-400 dark:border-gray-300">
                <div class="card-sm max-w-sm">
                  <div class="card-padding">
                    <p class="text-sm text-center">Content centered vertically and horizontally</p>
                  </div>
                </div>
              </div>
              <p class="text-xs text-muted mt-2 text-center">Used in login/register pages for full-screen centered forms</p>
            </div>
          </div>

          <!-- Nav Container Demo -->
          <div>
            <h4 class="heading-sm mb-3">Nav Container (.nav-container)</h4>
            <p class="text-muted text-sm mb-4">Navigation bar with background and shadow</p>
            <div class="bg-gray-100 dark:bg-gray-600 p-6 rounded-lg">
              <div class="nav-container rounded-lg">
                <div class="px-6 py-3">
                  <p class="text-sm">Navigation content goes here</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Component Examples -->
<section id="components" data-tab-content="components" class="mb-16 hidden">
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 max-w-6xl mx-auto">
    
    <!-- Tabs Component -->
    <div class="card lg:col-span-2">
      <div class="card-padding">
        <h3 class="heading-md mb-6">Tabs</h3>
        <p class="text-muted text-sm mb-4">Tabbed navigation for organizing content into sections</p>
        
        <!-- Demo tabs -->
        <div class="border border-gray-200 dark:border-gray-600 rounded-lg p-4 bg-gray-50 dark:bg-gray-600" data-tab-group>
          <%= render('components/tabs', locals: { 
            tabs: [
              { id: 'tab-demo-1', label: 'Profile' },
              { id: 'tab-demo-2', label: 'Settings' },
              { id: 'tab-demo-3', label: 'Notifications' }
            ],
            active: 'tab-demo-1'
          }) %>
          
          <div data-tab-content="tab-demo-1" class="p-4">
            <p class="text-sm">Profile tab content goes here...</p>
          </div>
          <div data-tab-content="tab-demo-2" class="p-4 hidden">
            <p class="text-sm">Settings tab content goes here...</p>
          </div>
          <div data-tab-content="tab-demo-3" class="p-4 hidden">
            <p class="text-sm">Notifications tab content goes here...</p>
          </div>
        </div>
        
        <div class="mt-4">
          <code class="text-xs text-muted block">render('components/tabs', locals: { tabs: [{ id: 'tab1', label: 'Tab 1' }, ...], active: 'tab1' })</code>
          <p class="text-xs text-muted mt-2">Add <code class="bg-gray-100 dark:bg-gray-600 px-1 rounded">data-tab-content="tab-id"</code> to sections to show/hide with tabs</p>
        </div>
      </div>
    </div>

    <!-- Stat Card Component -->
    <div class="card">
      <div class="card-padding">
        <h3 class="heading-md mb-6">Stat Card</h3>
        <p class="text-muted text-sm mb-4">Display key metrics with icons</p>
        <%= render('components/stat_card', locals: { icon: 'user', color: 'indigo', label: 'Total Users', value: '1,234' }) %>
        <div class="mt-4">
          <code class="text-xs text-muted block">render('components/stat_card', locals: { icon: 'user', color: 'indigo', label: 'Total Users', value: '1,234' })</code>
        </div>
      </div>
    </div>

    <!-- Info Row Component -->
    <div class="card">
      <div class="card-padding">
        <h3 class="heading-md mb-6">Info Row</h3>
        <p class="text-muted text-sm mb-4">Two-column information rows with optional actions</p>
        <div class="border-t border-gray-200 dark:border-gray-600">
          <%= render('components/info_row', locals: { title: 'Email Address', subtitle: 'user@example.com', border_class: 'border-b border-gray-200 dark:border-gray-600' }) %>
          <%= render('components/info_row', locals: { title: 'Account Status', subtitle: 'Active', border_class: '' }) %>
        </div>
        <div class="mt-4">
          <code class="text-xs text-muted block">render('components/info_row', locals: { title: 'Email', subtitle: 'user@example.com', border_class: '...' })</code>
        </div>
      </div>
    </div>

    <!-- Feature Item Component -->
    <div class="card">
      <div class="card-padding">
        <h3 class="heading-md mb-6">Feature Item</h3>
        <p class="text-muted text-sm mb-4">List item with checkmark icon</p>
        <ul class="space-y-3">
          <%= render('components/feature_item', locals: { label: 'Fast Performance', description: 'Lightning quick response times' }) %>
          <%= render('components/feature_item', locals: { label: 'Secure by Default', description: 'Built-in security features' }) %>
          <%= render('components/feature_item', locals: { label: 'Easy to Use', description: 'Simple and intuitive' }) %>
        </ul>
        <div class="mt-4">
          <code class="text-xs text-muted block">render('components/feature_item', locals: { label: 'Feature', description: 'Details' })</code>
        </div>
      </div>
    </div>

    <!-- Icon Component -->
    <div class="card">
      <div class="card-padding">
        <h3 class="heading-md mb-6">Icon</h3>
        <p class="text-muted text-sm mb-4">SVG icons for common use cases</p>
        <div class="flex items-center gap-6 mb-4">
          <%= render('components/icon', locals: { name: 'user', css_class: 'h-8 w-8 text-indigo-600 dark:text-indigo-400' }) %>
          <%= render('components/icon', locals: { name: 'check_circle', css_class: 'h-8 w-8 text-green-600 dark:text-green-400' }) %>
          <%= render('components/icon', locals: { name: 'lock', css_class: 'h-8 w-8 text-red-600 dark:text-red-400' }) %>
          <%= render('components/icon', locals: { name: 'check', css_class: 'h-8 w-8 text-blue-600 dark:text-blue-400', fill: 'currentColor' }) %>
        </div>
        <p class="text-xs text-muted mb-2">Available icons: user, check_circle, lock, check</p>
        <code class="text-xs text-muted block">render('components/icon', locals: { name: 'user', css_class: 'h-8 w-8 text-indigo-600' })</code>
      </div>
    </div>

    <!-- Flash Component -->
    <div class="card lg:col-span-2">
      <div class="card-padding">
        <h3 class="heading-md mb-6">Flash Messages</h3>
        <p class="text-muted text-sm mb-4">Success and error notifications (automatically rendered in layout)</p>
        <div class="space-y-4">
          <div class="alert-success" role="alert">
            <span class="block sm:inline">This is a success message</span>
          </div>
          <div class="alert-error" role="alert">
            <span class="block sm:inline">This is an error message</span>
          </div>
        </div>
        <div class="mt-4">
          <code class="text-xs text-muted block">render('components/flash') - Uses flash[:success] and flash[:error]</code>
        </div>
      </div>
    </div>

  </div>
</section>
