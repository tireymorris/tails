<%
  variant = defined?(variant) ? variant : 'primary'
  css_class = defined?(css_class) ? css_class : ''
  is_active = defined?(active) && active
  
  classes = case variant
  when 'primary'
    "font-medium text-indigo-600 dark:text-indigo-400 hover:text-indigo-500 dark:hover:text-indigo-300 #{css_class}"
  when 'button'
    "bg-indigo-600 dark:bg-indigo-500 text-white px-4 py-2 rounded-md text-sm font-medium hover:bg-indigo-700 dark:hover:bg-indigo-600 #{css_class}"
  when 'nav'
    if is_active
      "text-gray-900 dark:text-gray-100 hover:text-gray-700 dark:hover:text-gray-100 inline-flex items-center px-3 py-2 text-sm font-medium border-b-2 border-indigo-500 dark:border-indigo-400 #{css_class}"
    else
      "text-gray-500 dark:text-gray-300 hover:text-gray-700 dark:hover:text-gray-100 inline-flex items-center px-3 py-2 text-sm font-medium border-b-2 border-transparent #{css_class}"
    end
  when 'brand'
    "text-xl font-bold text-indigo-600 dark:text-indigo-400 #{css_class}"
  else
    css_class
  end
%>

<a href="<%= href %>" class="<%= classes.strip %>">
  <%= text %>
</a>

