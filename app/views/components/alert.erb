<%
  type_attr = defined?(type) ? type : 'success'
  
  classes = case type_attr
  when 'success'
    'mb-4 bg-green-100 dark:bg-green-900 border border-green-400 dark:border-green-600 text-green-700 dark:text-green-200 px-4 py-3 rounded relative'
  when 'error'
    'mb-4 bg-red-100 dark:bg-red-900 border border-red-400 dark:border-red-600 text-red-700 dark:text-red-200 px-4 py-3 rounded relative'
  else
    'mb-4 bg-green-100 dark:bg-green-900 border border-green-400 dark:border-green-600 text-green-700 dark:text-green-200 px-4 py-3 rounded relative'
  end
%>

<div class="<%= classes %>" role="alert">
  <span class="block sm:inline"><%= message %></span>
</div>

